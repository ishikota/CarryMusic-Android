<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Color used for ProgressBar, SeekBar, etc -->
        <item name="colorControlNormal">@color/app_control_color</item>
        <item name="colorControlActivated">@color/app_control_color</item>

        <!-- Add padding on AppBar icon -->
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>

    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MediaControllerBtn" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/media_controller_btn_size</item>
        <item name="android:layout_height">@dimen/media_controller_btn_size</item>
        <item name="android:padding">@dimen/media_control_btn_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:alpha">0.8</item>
    </style>

</resources>
